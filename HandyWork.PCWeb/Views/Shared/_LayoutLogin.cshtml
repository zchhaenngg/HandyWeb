@using HandyWork.UIBusiness.Utility
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" /> 
    <title>
        @ViewBag.Title
    </title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="/UserStyles/Shared/_Layout/_Common.css" rel="stylesheet" type="text/css" />
    <link href="~/UserStyles/Shared/_Layout/_LayoutLogin.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div id="header">
        <header>
            <span>
                <img src="/Images/header/Logo_blue.png" alt="logo" class="site_logo" />
            </span>
        </header>
    </div>
    <div id="body" >
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <div id="footer">
            <div class="footcontainer1">@string.Format("{0}:{1}", "版本", VersionUtil.GetVersionNumber())</div>
            <div class="footcontainer2">上海联影医疗科技有限公司 Copyright 2015</div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            var footwidth = $("#footer").width();
            var marginleftval = -footwidth / 2 + "px";
            $(".footcontainer1").css({
                "width": function () { return $("#footer").css('width'); },
                "margin-left": function () { return marginleftval; },
            });
            $(".footcontainer2").css({
                "width": function () { return $("#footer").css('width'); },
                "margin-left": function () { return marginleftval; },
            });

    })
    </script>
    @RenderSection("scripts", required: false)
 </body>
</html>
<script src="/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>