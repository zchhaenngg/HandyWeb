<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/easyui")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="easyui-layout" data-options="fit:true">
        <div data-options="region:'north'" class="noborder">
            <div style="float:left">
                @Html.Partial("_MenuPartial")
            </div>
            <div style="float:right" class="login_msg">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        <div data-options="region:'south',split:true" style="height:50px;"></div>
        <div data-options="region:'east',split:true" title="East" style="width:150px;"></div>
        <div data-options="region:'west',split:true,collapsed:true" title="West" style="width:150px;"></div>
        <div class="container body-content" data-options="region:'center',title:'Main Title',iconCls:'icon-ok'">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/easyui")
    @Scripts.Render("~/bundles/hy")
    @RenderSection("scripts", required: false)
    <script src="~/UserScripts/Shared/_Layout.js"></script>
</body>
</html>
