@using HandyWork.ViewModel.Web
@{
    ViewBag.Title = "用户列表";
    Layout = "~/Views/Shared/_Layout.cshtml";//默认可不写
}
<a href="javascript:void(0);" onclick="testAlert()">testAlert</a>
<div class="container">
    <div id="toolbar">
        <button id="remove" class="btn btn-danger" disabled>
            <i class="glyphicon glyphicon-remove"></i> Delete
        </button>
    </div>
    <table id="userindex_list">
    </table>
</div>
@section scripts {
<script>
    function testAlert() {
        sweetAlert({
            title: "Oops!",
            text: "Something went wrong on the page!",
            type: "error"
        });
    }

    var selections = [];
    var $remove = $('#remove');
    $remove.setEnableSwitch = function () {
        this.prop('disabled', !$table.bootstrapTable('getSelections').length);
    }
    var $table = $("#userindex_list");

    
    function getIdSelections() {
        return $.map($table.bootstrapTable('getSelections'), function (row) {
            return row.Id
        });
    }
    
    $(function () {
        
        $table.bootstrapTable({
            url: '/Account/JsonFindUsers',
            columns: [
                {
                    checkbox: true
                },
                {
                    field: 'UserName',
                    title: '用户名'
                }, {
                    field: 'NickName',
                    title: '姓名'
                }, {
                    field: 'Email',
                    title: '邮箱'
                }, {
                    field: 'PhoneNumber',
                    title: '联系电话'
                }, {
                    field: 'EmailConfirmed',
                    title: '邮箱确认'
                }, {
                    field: 'IsLocked',
                    title: '账号锁定'
                }, {
                    field: 'LockedTime',
                    title: '账号锁定时间'
                }
            ],
            onLoadError: function (status) {
                return false;
            },
            onLoadSuccess: function (data) {
                return false;
            },
            method: "post",
            sidePagination: "server",
            search: true,
            
            checkboxHeader: true,
            toolbar: " #toolbar",
            uniqueId: "Id",
            idField: "Id",
            detailFormatter: function (index, row) {
                var html = [];
                $.each(row, function (key, value) {
                    if (key != 0) {
                        html.push('<p><b>' + key + ':</b> ' + value + '</p>');
                    }
                });
                return html.join('');
            },
            showPaginationSwitch: true,
            detailView: true,
            showColumns: true,
            showToggle: true,
            showRefresh: true,
            pagination: true,
            pageList: [10, 25, 50, 100, 'ALL'],
            onCheck: function (row) {
                $remove.setEnableSwitch();
                return false;
            },
            onUncheck: function (row) {
                $remove.setEnableSwitch();
                return false;
            },
            onCheckAll: function (rows) {
                $remove.setEnableSwitch();
                return false;
            },
            onUncheckAll: function (rows) {
                $remove.setEnableSwitch();
                return false;
            }
        });
        
        $remove.click(function () {
            
            var ids = getIdSelections();
            $table.bootstrapTable('remove', {
                field: 'Id',
                values: ids
            });
            $remove.prop('disabled', true);
        });
    });
   
</script>
}
